# Configuration Firebase
# Remplacez ces valeurs par celles de votre projet Firebase

# Firebase Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Chemin vers le fichier de clé de service Firebase
# Téléchargez le fichier JSON depuis votre console Firebase
# et placez-le dans identity-provider/config/
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# ou directement les credentials en JSON (alternative)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Base de données Firestore
FIREBASE_DATABASE_URL=https://your-firebase-project-id-default-rtdb.firebaseio.com

# Collection Firebase pour les signalements
FIREBASE_SIGNALEMENTS_COLLECTION=signalements

# Variables existantes PostgreSQL
POSTGRES_USER=cloudmap
POSTGRES_PASSWORD=password123
POSTGRES_DB=cloudmap_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT Secret
JWT_SECRET=your-super-secret-key-change-this